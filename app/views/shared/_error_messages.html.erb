<% if @user.errors.any? %>

	<div id="error_explanation">
		<h2><%= pluralize(@user.errors.count, "error") %>
			prevented your changes to be saved:
		</h2>
		<p> There were problems with the following:</p>
		<ul>
		<% @user.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
		</ul>
	</div>
	
<% end %>